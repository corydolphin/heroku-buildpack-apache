#!/usr/bin/env bash

# Usage:
#
#     $ bin/compile <build-dir> <cache-dir>


# Fail fast and fail hard.


echo "-----> Vendoring Apache Httpd"

BIN_DIR=$(cd $(dirname $0); pwd) # absolute path
ROOT_DIR=$(dirname $BIN_DIR)
BUILD_DIR=$1
CACHE_DIR=$2


mkdir -p $1/vendor

curl https://raw.github.com/wcdolphin/vulcan-apache/master/apache-bench.tgz --silent -o - | tar -xz -C $1/vendor -f -

echo "export LD_LIBRARY_PATH=\"/app/vendor/apache-2.4.4/lib/::\$LD_LIBRARY_PATH\"" > $BUILD_DIR/.profile.d/apache.sh
